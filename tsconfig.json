{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "noImplicitOverride": true
  },
  "exclude": [
    "test/*",
    "__tests__/*",
    "node_modules",
    "jest.config.ts",
    "eslint.config.js",
  ]
}
